{
  "compilerOptions": {
    // File Layout
    "rootDir": "./src",
    "outDir": "./output",

    // Environment Settings
    "module": "ESNext",        // ⬅ এখানে পরিবর্তন
    "target": "ES6",           // ES6 use করলে safe
    "lib": ["ESNext", "DOM"],  // ⬅ browser এর জন্য DOM যোগ করা জরুরি
    "types": [],

    // Other Outputs
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    // Stricter Typechecking Options
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    // Recommended Options
    "strict": true,
    "skipLibCheck": true
  }
}
